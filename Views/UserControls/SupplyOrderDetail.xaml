<UserControl x:Class="ItaliaPizzaClient.Views.UserControls.SupplyOrderDetail"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ItaliaPizzaClient.Views.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="42" d:DesignWidth="180">
    <Border Background="{StaticResource BackgroundBrush}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*" />
                <ColumnDefinition Width="7*" />
            </Grid.ColumnDefinitions>

            <StackPanel Grid.Column="1" Orientation="Vertical">
                <TextBlock Text="SupplyName"
                           Style="{DynamicResource RegularLabelStyle}"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>
