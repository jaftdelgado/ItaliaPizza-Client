<Page x:Class="ItaliaPizzaClient.Views.SalesReportDocument"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SalesReportDocument">

    <Grid Margin="20" Background="{StaticResource BackgroundBrush}">
        <StackPanel>
            <TextBlock Text="Sales Report" FontSize="20" FontWeight="Bold" Margin="0,0,0,10"/>
            <TextBlock x:Name="DateRangeText" FontStyle="Italic" Margin="0,0,0,20"/>

            <DataGrid x:Name="PrintDataGrid"
                      AutoGenerateColumns="False"
                      CanUserAddRows="False"
                      HeadersVisibility="Column"
                      IsReadOnly="True"
                      Margin="0,0,0,20">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="CashRegisterID" Binding="{Binding CashRegisterID}" Width="*"/>
                    <DataGridTextColumn Header="Opening Date" Binding="{Binding OpeningDate, StringFormat=d}" Width="2*"/>
                    <DataGridTextColumn Header="Initial Amount" Binding="{Binding InitialBalance, StringFormat=C}" Width="2*"/>
                    <DataGridTextColumn Header="Cashier Amount" Binding="{Binding CashierAmount, StringFormat=C}" Width="2*"/>
                </DataGrid.Columns>
            </DataGrid>
        </StackPanel>
    </Grid>
</Page>
