<Page x:Class="ItaliaPizzaClient.Views.SalesReportPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views" xmlns:sys="clr-namespace:System;assembly=mscorlib"
      mc:Ignorable="d" 
      d:DesignHeight="520" d:DesignWidth="800"
      Title="SalesReportPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" Margin="20,0,0,10" 
            HorizontalAlignment="Left" VerticalAlignment="Bottom">
            <TextBlock Style="{StaticResource HeaderLabelStyle}"
                Text="{DynamicResource SalesReport_Header}"/>
            <TextBlock Style="{StaticResource DescriptionLabelStyle}"
                Text="{DynamicResource SalesReport_Desc}"/>
        </StackPanel>

        <Border Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="0.75*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <StackPanel Grid.Row="0" Orientation="Horizontal"
                                VerticalAlignment="Top" Margin="20, 0">
                        <TextBlock Text="{DynamicResource SalesReport_startDate}"
                                   Style="{DynamicResource SubtitleLabelStyle}"
                                   Margin="0, 0, 5, 0"/>
                        <DatePicker x:Name="startDate" CalendarOpened="startDate_CalendarOpened"
                                    SelectedDateChanged="startDate_SelectedDateChanged"
                                    DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Orientation="Horizontal"
                                VerticalAlignment="Top" Margin="20, 0">
                        <TextBlock Text="{DynamicResource SalesReport_endDate}"
                                   Style="{DynamicResource SubtitleLabelStyle}"
                                   Margin="0, 0, 5, 0"/>
                        <DatePicker x:Name="endDate" CalendarOpened="endDate_CalendarOpened"
                                    SelectedDateChanged="endDate_SelectedDateChanged"
                                    DisplayDateEnd="{x:Static sys:DateTime.Today}"/>
                    </StackPanel>
                </Grid>
                <Border Grid.Column="1"
                        BorderBrush="{StaticResource SecondaryBrush}"
                        BorderThickness="0.5, 0, 0, 0">
                    <Grid>
                        <Grid Grid.Row="0" x:Name="ReportDetailsPanel"
                              Visibility="Visible">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="40"/>
                                <RowDefinition Height="*"/>
                                <RowDefinition Height="Auto"/>
                            </Grid.RowDefinitions>

                            <StackPanel Grid.Row="0" Orientation="Horizontal"
                                        VerticalAlignment="Bottom" Margin="20 0" >
                                <ContentControl Style="{StaticResource TagStyle}" 
                                                Content="{DynamicResource SalesReport_tablePreview}"/>
                            </StackPanel>
                            <Grid Grid.Row="1" Margin="0, 10, 0, 20">
                                <DataGrid x:Name="ReportDetailsDataGrid"
                                          AutoGenerateColumns="False" IsReadOnly="True"
                                          RowStyle="{DynamicResource DataGridRowStyle1}"
                                          ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}"
                                          CellStyle="{DynamicResource DataGridCellStyle1}"
                                          Style="{DynamicResource DataGridStyle1}">
                                    <DataGrid.Columns>
                                        <DataGridTextColumn Header="{DynamicResource SalesReport_CashRegisterID}"
                                                            Binding="{Binding CashRegisterID}" Width="*"
                                                            CellStyle="{StaticResource DataGridCellStyle0}">
                                        </DataGridTextColumn>
                                        <DataGridTextColumn Header="{DynamicResource SalesReport_startDate}" Binding="{Binding OpeningDate}"
                                                            Width="2*"/>
                                        <DataGridTextColumn Header="{DynamicResource SalesReport_InitialAmount}" Binding="{Binding InitialAmount}"
                                                            Width="2*"/>
                                        <DataGridTextColumn Header="{DynamicResource SalesReport_ClosingAmount}" Binding="{Binding CashierAmount}"
                                                            Width="2*"/>
                                    </DataGrid.Columns>
                                </DataGrid>

                                <StackPanel x:Name="NoMatchesMessage" Orientation="Vertical"
                                            VerticalAlignment="Center" HorizontalAlignment="Center"
                                            Visibility="Collapsed">
                                    <Image Source="/Resources/Icons/search-error-icon.png"
                                           Width="64" Height="64"
                                           RenderOptions.BitmapScalingMode="HighQuality"/>
                                    <TextBlock Text="No se encontraron resultados"
                                               Style="{DynamicResource SubtitleLabelStyle}"
                                               Margin="0 6" TextAlignment="Center"/>
                                    <TextBlock Text="Prueba con otra fecha"
                                               TextAlignment="Center"
                                               Style="{DynamicResource DescriptionLabelStyle}"/>
                                </StackPanel>
                            </Grid>
                            <Grid Grid.Row="2">
                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right"
                                            VerticalAlignment="Center"
                                            Margin="0, 0, 20, 10" >
                                    <Button x:Name="BtnGenerateReport" Style="{DynamicResource PrimaryButtonNoIconStyle}"
                                            Content="{DynamicResource SalesReport_btnGenerateReport}"
                                            Click="BtnGenerateReport_Click"/>
                                </StackPanel>
                            </Grid>
                        </Grid>
                    </Grid>
                </Border>
            </Grid>
        </Border>
    </Grid>
</Page>
