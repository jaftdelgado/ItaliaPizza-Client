<Page x:Class="ItaliaPizzaClient.Views.RegisterOrderSupplierPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterOrderSupplierPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="68"/>
            <!--Cabecera-->
            <RowDefinition Height="*"/>
            <!--Contenido Principal-->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0,0,0,0.5"
            BorderBrush="{StaticResource SecondaryBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="20,0,0,10" 
                        HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Style="{StaticResource HeaderLabelStyle}"
                           Text="{DynamicResource RegOrderSupplier_Header}"/>
                    <TextBlock Style="{StaticResource DescriptionLabelStyle}"
                           Text="{DynamicResource RegOrderSupplier_Desc}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="6*"/>
                <ColumnDefinition Width="4*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="1" BorderBrush="{DynamicResource SecondaryBrush}" BorderThickness="0,0,0.5,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top"
                        Margin="0,24" Width="300">
                    <DataGrid RowStyle="{DynamicResource DataGridRowStyle1}" 
                         ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" 
                         CellStyle="{DynamicResource DataGridCellStyle1}" 
                         x:Name="OrdersuppliersDataGrid" Style="{DynamicResource DataGridStyle1}" AutoGenerateColumns="False">
                        <DataGrid.Columns>
                            <!--Insumo -->
                            <DataGridTextColumn Header="Insumos" Binding="{Binding SupplyName}" IsReadOnly="True" Width="*"/>
                            <DataGridTextColumn Header="Cantidad" Binding="{Binding QuantityWithUnit}" IsReadOnly="True" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>

                    <Button Content="{DynamicResource OrderSupplier_BtnNewOrden}" Width="200"
                        Style="{DynamicResource PrimaryButtonStyle}"
                        Margin="0,12,0,6"
                            Click="SubmitOrder_Click">
                        <Button.Tag>/Resources/Icons/suppliers-icon.png</Button.Tag>
                    </Button>

                    <Button Content="{DynamicResource OrderSupplier_BtnDeleteSupply}" Width="200"
                            Style="{DynamicResource SecondaryButtonStyle}" Foreground="#FF1654"
                            Click="DeleteSelectedSupply_Click">
                        <Button.Tag>/Resources/Icons/delete-icon.png</Button.Tag>
                    </Button>
                </StackPanel>
            </Border>

            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="20,4">
                    <TextBlock Text="{DynamicResource RegOrderSupplier_Info}"
                           Style="{DynamicResource SubtitleLabelStyle}"/>
                </StackPanel>

                <Border Grid.Row="1" BorderBrush="{DynamicResource SecondaryBrush}" BorderThickness="0,0,0,0.5">
                    <StackPanel Orientation="Vertical" Margin="20,16,0,0"
                            HorizontalAlignment="Left">
                        <ComboBox x:Name="cbSuppliersCategories" Style="{DynamicResource ComboBoxStyle}" Margin="0,0,0,10"
                                  Tag="{DynamicResource Glb_SuppliersCategory}"
                                  SelectionChanged="cbCategories_SelectionChanged">
                        </ComboBox>
                        <ComboBox x:Name="cbSuppliersName" IsEnabled="False" Style="{DynamicResource ComboBoxStyle}" Margin="0,0,0,10"
                                  Tag="{DynamicResource Glb_Suppliers}"
                                  SelectionChanged="cbSuppliers_SelectionChanged">
                        </ComboBox>
                        <ComboBox x:Name="cbSuppliesName" IsEnabled="False" Style="{DynamicResource ComboBoxStyle}" Margin="0,0,0,10"
                                  Tag="{DynamicResource Glb_Supplies}"
                                  SelectionChanged="cbSuppliesName_SelectionChanged">
                        </ComboBox>
                        <TextBox x:Name="txtQuantity" IsEnabled="False" Style="{StaticResource TextBoxStyle}" 
                            Tag="{DynamicResource Glb_Quantity}"
                            Width="340"/>
                        <Button x:Name="btnAddSupply" Content="{DynamicResource OrderSupplier_BtnAddSupply}" Width="200"
                                Style="{DynamicResource PrimaryButtonStyle}"
                                Margin="0,12,0,6"
                                Click="AddSupplyButton_Click">
                            <Button.Tag>/Resources/Icons/supplies-icon.png</Button.Tag>
                        </Button>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </Grid>
</Page>
