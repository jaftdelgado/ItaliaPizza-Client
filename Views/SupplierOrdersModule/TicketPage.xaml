<Page x:Class="ItaliaPizzaClient.Views.TicketPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="350"
      Title="TicketPage">
    <Border Background="{StaticResource BackgroundBrush}" CornerRadius="12">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Encabezado -->
            <TextBlock Text="ITALIA PIZZA" FontSize="24" FontWeight="Bold"
                   HorizontalAlignment="Center" Margin="0,0,0,10" Grid.Row="0"/>

            <!-- Información de la tienda -->
            <StackPanel Grid.Row="1" HorizontalAlignment="Center">
                <TextBlock Text="ITALIA PIZZA XALAPA SA DE CV" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Avenida Xalapa, N° 11, Col. Magisterial, C.P. 02300" TextAlignment="Center"/>
                <TextBlock Text="Xalapa, Veracruz, México" TextAlignment="Center"/>
                <TextBlock Text="Tel. 22-8878-2000" TextAlignment="Center"/>
            </StackPanel>

            <StackPanel Grid.Row="2" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="ITALIA PIZZA LA ISLA" FontWeight="Bold" TextAlignment="Center"/>
                <TextBlock Text="Av. Tablaje Catastral N°30020 Loc. FB-31" TextAlignment="Center"/>
                <TextBlock Text="Col. Cabo Norte, C.P. 97305, Mérida, Yucatán" TextAlignment="Center"/>
                <TextBlock Text="Tel. 9995183669" TextAlignment="Center"/>
            </StackPanel>

            <!-- Información del ticket -->
            <StackPanel Grid.Row="3" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Fecha: 26/01/2021 15:14"/>
                <TextBlock Text="Ticket Num: 12782-01 03037"/>
            </StackPanel>

            <!-- Tabla de productos -->
            <Grid Grid.Row="4" Margin="10,10,10,10" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*" />
                    <ColumnDefinition Width="1*" />
                    <ColumnDefinition Width="1*" />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Encabezados -->
                <TextBlock Text="Descripción" FontWeight="Bold" Grid.Row="0" Grid.Column="0" TextAlignment="Left" Padding="5"/>
                <TextBlock Text="Precio" FontWeight="Bold" Grid.Row="0" Grid.Column="1" TextAlignment="Right" Padding="5"/>
                <TextBlock Text="Total" FontWeight="Bold" Grid.Row="0" Grid.Column="2" TextAlignment="Right" Padding="5"/>

                <!-- Productos -->
                <TextBlock Text="Cubiertos" Grid.Row="1" Grid.Column="0" TextAlignment="Left" Padding="5"/>
                <TextBlock Text="$79.00" Grid.Row="1" Grid.Column="1" TextAlignment="Right" Padding="5"/>
                <TextBlock Text="$79.00" Grid.Row="1" Grid.Column="2" TextAlignment="Right" Padding="5"/>

                <TextBlock Text="Cubiertos" Grid.Row="2" Grid.Column="0" TextAlignment="Left" Padding="5"/>
                <TextBlock Text="$79.00" Grid.Row="2" Grid.Column="1" TextAlignment="Right" Padding="5"/>
                <TextBlock Text="$79.00" Grid.Row="2" Grid.Column="2" TextAlignment="Right" Padding="5"/>

                <TextBlock Text="Cubiertos" Grid.Row="3" Grid.Column="0" TextAlignment="Left" Padding="5"/>
                <TextBlock Text="$79.00" Grid.Row="3" Grid.Column="1" TextAlignment="Right" Padding="5"/>
                <TextBlock Text="$79.00" Grid.Row="3" Grid.Column="2" TextAlignment="Right" Padding="5"/>
            </Grid>

            <!-- Total -->
            <StackPanel Grid.Row="5" HorizontalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="IVA 16%: $157.25"/>
                <TextBlock Text="TOTAL: $1,140.00" FontWeight="Bold"/>
                <TextBlock Text="Pago: Tarjeta Online"/>
            </StackPanel>
        </Grid>
    </Border>

    </Page>
