<Page x:Class="ItaliaPizzaClient.Views.RegisterCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterCustomerPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>

            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15, 10, 0, 10">
            <TextBlock Style="{StaticResource HeaderLabelStyle}" Text="{DynamicResource RegCustomer_Header}"/>

            <TextBlock Style="{StaticResource DescriptionLabelStyle}" Text="{DynamicResource RegCustomer_Desc}"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="15" Background="{StaticResource BackgroundBrush}">
            <Grid.RowDefinitions>
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="0">
                <TextBlock Text="{DynamicResource RegCustomer_PersonalData}" Style="{StaticResource RegularLabelStyle}"/>
                
                <TextBox Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_Name}" Width="200" Margin="0, 10"/>
                <TextBox Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_LastName}" Width="200" Margin="0, 10"/>
                <TextBox Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_PhoneNumber}" Width="200" Margin="0, 10"/>
            
            </StackPanel>

            <StackPanel Orientation="Vertical" HorizontalAlignment="Left" Grid.Column="1">
                <TextBlock Text="{DynamicResource RegCustomer_AddressData}" Style="{StaticResource RegularLabelStyle}"/>

                <TextBox Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_AddressName}" Width="200" Margin="0, 10"/>
                <TextBox Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_AddressZipCode}" Width="200" Margin="0, 10"/>
                <TextBox Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_AddressDistrict}" Width="200" Margin="0, 10"/>

            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1">
                <Button Style="{DynamicResource SecondaryButtonStyle}" Content="{DynamicResource Glb_BtnCancel}" Click="BtnCancelRegister"/>
                <Button Style="{DynamicResource PrimaryButtonStyle}" Content="{DynamicResource Glb_BtnSave}" Click="BtnSaveCustomer" Margin="25"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Page>
