<Page x:Class="ItaliaPizzaClient.Views.RegisterSupplyPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="480" d:DesignWidth="800"
      Title="RegisterSupplyPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="68"/>
            <!--Cabecera-->
            <RowDefinition Height="*"/>
            <!--Contenido Principal-->
        </Grid.RowDefinitions>

        <Border Grid.Row="0" BorderThickness="0,0,0,0.5"
                BorderBrush="{StaticResource SecondaryBrush}">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="6*"/>
                    <ColumnDefinition Width="4*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Vertical" Margin="20,0,0,10" 
                            HorizontalAlignment="Left" VerticalAlignment="Bottom">
                    <TextBlock Style="{StaticResource HeaderLabelStyle}"
                               Text="{DynamicResource RegSupply_Header}"/>
                    <TextBlock Style="{StaticResource DescriptionLabelStyle}"
                               Text="{DynamicResource RegSupply_Desc}"/>
                </StackPanel>
            </Grid>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3.2*"/>
                <ColumnDefinition Width="6.8*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" BorderBrush="{DynamicResource SecondaryBrush}" BorderThickness="0,0,0.5,0">
                <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Top"
                            Margin="0,24" Width="210">
                    <Border BorderBrush="#D3D1DB" BorderThickness="1" CornerRadius="8" Width="210" Height="210">
                        <Image Name="UserImage" HorizontalAlignment="Center" VerticalAlignment="Center" Stretch="UniformToFill"/>
                    </Border>

                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,8">
                        <Image Width="12" Height="12" Margin="0,0,4,0"
                               RenderOptions.BitmapScalingMode="HighQuality" 
                               Stretch="Uniform" ToolTip="{DynamicResource Glb_ValidImageFormat}"
                               Source="/Resources/Icons/info-icon.png"/>
                        <TextBlock Style="{DynamicResource DescriptionLabelStyle}"
                                   TextWrapping="Wrap"
                                   Text="{DynamicResource Glb_ValidImageFormat}"/>
                    </StackPanel>
                    
                    <Button Content="{DynamicResource Glb_BtnSelectImage}"
                            Style="{DynamicResource PrimaryButtonStyle}"
                            Margin="0,12,0,6">
                        <Button.Tag>/Resources/Icons/gallery-icon.png</Button.Tag>
                    </Button>

                    <Button Content="{DynamicResource Glb_BtnDeleteImage}"
                            Style="{DynamicResource SecondaryButtonStyle}" Foreground="#FF1654">
                        <Button.Tag>/Resources/Icons/delete-icon.png</Button.Tag>
                    </Button>
                </StackPanel>
            </Border>
            
            <Grid Grid.Column="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="44"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="60"/>
                </Grid.RowDefinitions>

                <StackPanel Grid.Row="0" VerticalAlignment="Bottom" Margin="20,4">
                    <TextBlock Text="{DynamicResource RegSupply_SupplyInfo}"
                               Style="{DynamicResource SubtitleLabelStyle}"/>
                </StackPanel>

                <Border Grid.Row="1" BorderBrush="{DynamicResource SecondaryBrush}">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" MinWidth="20"/>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" MinWidth="20"/>
                        </Grid.ColumnDefinitions>

                        <Border Grid.Column="1" BorderBrush="{DynamicResource SecondaryBrush}">
                            <Grid>
                                <StackPanel Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Stretch">

                                    <!-- Fila 1: Nombre y Marca del Insumo -->
                                    <Grid Margin="0,0,0,12" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <TextBox Grid.Column="0" 
             Tag="{DynamicResource RegSupply_TbSupplyName}" 
             Style="{DynamicResource TextBoxStyle}" VerticalAlignment="Top"
             HorizontalAlignment="Stretch"/>

                                        <StackPanel Grid.Column="2" Orientation="Vertical" 
                                HorizontalAlignment="Stretch">
                                            <TextBox Tag="{DynamicResource RegSupply_TbSupplyBrand}" 
                 Style="{DynamicResource TextBoxStyle}"
                 HorizontalAlignment="Stretch"/>
                                            <CheckBox Content="{DynamicResource RegSupply_CheckBSupplyBrand}" 
                  Style="{DynamicResource CheckBoxStyle}"/>
                                        </StackPanel>
                                    </Grid>

                                    <!-- Fila 2: Categoría y Unidad de Medida -->
                                    <Grid Margin="0,0,0,12" HorizontalAlignment="Stretch">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="24" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0" x:Name="CbCategories" 
              Tag="{DynamicResource RegSupply_CbCategory}"
              Style="{DynamicResource ComboBoxStyle}" 
              HorizontalAlignment="Stretch"/>

                                        <ComboBox Grid.Column="2" x:Name="CbUnitMeasures" 
              Tag="{DynamicResource RegSupply_CbSupplyMeasure}"
              Style="{DynamicResource ComboBoxStyle}"
              DisplayMemberPath="Name" SelectedValuePath="Id"
              HorizontalAlignment="Stretch"/>
                                    </Grid>

                                    <!-- Fila 3: Proveedor y Botón -->
                                    <Grid HorizontalAlignment="Stretch" Margin="24,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*" />
                                            <ColumnDefinition Width="Auto" />
                                        </Grid.ColumnDefinitions>

                                        <ComboBox Grid.Column="0" Tag="{DynamicResource RegSupply_CbSupplier}"
              Style="{DynamicResource ComboBoxStyle}" 
              HorizontalAlignment="Stretch"/>

                                        <Button Grid.Column="1" Content="{DynamicResource RegSupply_BtnRegisterSupplier}"
            Style="{DynamicResource PrimaryButtonStyle}" 
            Padding="8,4"/>
                                    </Grid>

                                </StackPanel>
                            </Grid>
                        </Border>
                    </Grid>
                </Border>

                <Border Grid.Row="2" BorderBrush="{DynamicResource SecondaryBrush}"
                        BorderThickness="0,0.5,0,0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0" VerticalAlignment="Center">
                        <Button x:Name="BtnNewSupply" Style="{DynamicResource SecondaryButtonStyle}"
                                Content="{DynamicResource RegSupply_BtnRegisterSupply}">
                            <Button.Tag>/Resources/Icons/add-icon.png</Button.Tag>
                        </Button>
                        
                        <Button x:Name="BtnCancel" Style="{DynamicResource PrimaryButtonStyle}"
                                Content="{DynamicResource RegSupply_BtnRegisterSupply}">
                            <Button.Tag>/Resources/Icons/add-icon.png</Button.Tag>
                        </Button>
                    </StackPanel>
                </Border>

            </Grid>
            
        </Grid>
    </Grid>
</Page>
