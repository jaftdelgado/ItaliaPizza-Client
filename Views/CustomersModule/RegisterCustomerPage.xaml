<Page x:Class="ItaliaPizzaClient.Views.RegisterCustomerPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ItaliaPizzaClient.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegisterCustomerPage">

    <Grid Background="{StaticResource BackgroundBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"/>

            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="15, 10, 0, 10">
            <TextBlock Style="{StaticResource HeaderLabelStyle}" Text="{DynamicResource RegCustomer_Header}"/>

            <TextBlock Style="{StaticResource DescriptionLabelStyle}" Text="{DynamicResource RegCustomer_Desc}"/>
        </StackPanel>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left" Margin="20, 20, 20, 0">
            <StackPanel Orientation="Vertical">
                <TextBox Grid.Column="0" Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_Name}"
                 Width="200" Margin="0, 10"/>
                <TextBox Grid.Column="0" Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_LastName}"
                 Width="200" />
                <TextBox Grid.Column="0" Margin="0, 10" Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_PhoneNumber}"
                Width="200" />
                <TextBox Grid.Column="0" Style="{StaticResource TextBoxStyle}" Tag="{DynamicResource RegCustomer_Address}"
                Width="200"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="30, 30, 30, 30">
                <Button Style="{DynamicResource SecondaryButtonStyle}" Content="{DynamicResource Glb_BtnCancel}" Margin="10"
                        Click="BtnCancelRegister"/>
                <Button Style="{DynamicResource PrimaryButtonStyle}" Content="{DynamicResource Glb_BtnSave}"
                        Click="BtnSaveCustomer"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
