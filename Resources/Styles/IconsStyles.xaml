<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="PrincipalIconStyle" TargetType="Image">
        <Setter Property="Source" Value="/Resources/Icons/home-icon.png"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        <Setter Property="Height" Value="10.5"/>
        <Setter Property="Width" Value="10.5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="PrincipalIconActiveStyle" TargetType="Image">
        <Setter Property="Source" Value="/Resources/Icons/home-hover-icon.png"/>
        <Setter Property="RenderOptions.BitmapScalingMode" Value="HighQuality"/>
        <Setter Property="Height" Value="10.5"/>
        <Setter Property="Width" Value="10.5"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="0,0,5,0"/>
    </Style>

    <Style x:Key="NavigationSeparatorStyle" TargetType="Image">
        <Setter Property="Source" Value="/Resources/Icons/separator-icon.png"/>
        <Setter Property="Height" Value="6"/>
        <Setter Property="Width" Value="6"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Margin" Value="6,0,6,0"/>
    </Style>

</ResourceDictionary>