<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:utils="clr-namespace:ItaliaPizzaClient.Utilities">
    <utils:PlaceholderManager x:Key="PlaceholderManager"/>

    <Style x:Key="TextBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D3D1DB"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border x:Name="TextBoxBorder"
                        Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="12"
                        Padding="5">
                        <Grid>
                            <TextBlock Text="{TemplateBinding Tag}" 
                                   Foreground="{StaticResource SecondaryBrush}"
                                   FontSize="10"
                                   FontWeight="SemiBold"
                                   VerticalAlignment="Top"
                                   Margin="8,2,5,0"/>

                            <ScrollViewer x:Name="PART_ContentHost"
                                      VerticalAlignment="Bottom"
                                      Margin="0,14,0,0"/>
                        </Grid>
                    </Border>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="TextBoxBorder" Property="BorderBrush" Value="{StaticResource PrimaryButtonBrush}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#808080"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
        <Setter Property="Height" Value="48"/>
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="6,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D3D1DB"/>
        <Setter Property="Foreground" Value="{StaticResource PrimaryBrush}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ComboBox">
                    <Grid>
                        <Border x:Name="ComboBoxBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="12"
                            Padding="5">
                            <Grid>
                                <!-- Etiqueta tipo Placeholder -->
                                <TextBlock Text="{TemplateBinding Tag}" 
                                       Foreground="{StaticResource SecondaryBrush}"
                                       FontSize="10"
                                       FontWeight="SemiBold"
                                       VerticalAlignment="Top"
                                       Margin="8,2,5,0"/>

                                <!-- Contenido del ComboBox -->
                                <Grid Margin="0,14,0,0">
                                    <ToggleButton x:Name="ToggleButton"
                                              Focusable="False"
                                              Background="Transparent"
                                              BorderThickness="0"
                                              HorizontalAlignment="Right"
                                              VerticalAlignment="Center"
                                              Width="20"
                                              Height="20"
                                              IsChecked="{Binding IsDropDownOpen, RelativeSource={RelativeSource TemplatedParent}, Mode=TwoWay}">
                                        <ToggleButton.FocusVisualStyle>
                                            <Style TargetType="ToggleButton">
                                                <Setter Property="Background" Value="Transparent"/>
                                                <Setter Property="BorderBrush" Value="Transparent"/>
                                            </Style>
                                        </ToggleButton.FocusVisualStyle>

                                        <Path Data="M 4,6 L 8,10 L 12,6"
                                          Stroke="{StaticResource SecondaryBrush}"
                                          StrokeThickness="1.5"
                                          StrokeLineJoin="Round"
                                          StrokeStartLineCap="Round"
                                          StrokeEndLineCap="Round"/>
                                    </ToggleButton>

                                    <ContentPresenter x:Name="ContentPresenter"
                                                  Content="{TemplateBinding SelectionBoxItem}"
                                                  Margin="5,0,30,0"
                                                  VerticalAlignment="Center"/>
                                </Grid>
                            </Grid>
                        </Border>

                        <!-- Estilo para la lista desplegable -->
                        <Popup x:Name="Popup"
                           Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False">
                            <Border Background="White"
                                BorderBrush="#D3D1DB"
                                BorderThickness="1"
                                CornerRadius="8">
                                <ScrollViewer>
                                    <StackPanel>
                                        <ItemsPresenter/>
                                    </StackPanel>
                                </ScrollViewer>
                            </Border>
                        </Popup>
                    </Grid>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


    <Style x:Key="TextBoxStyle1" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Padding" Value="8,4"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D3D1DB"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <StackPanel Orientation="Vertical">
                        <!-- Título del TextBox -->
                        <TextBlock Text="{TemplateBinding Tag}" 
                               Foreground="#666"
                               FontSize="10"
                               FontWeight="Bold"
                               Margin="3,0,3,2"/>

                        <!-- Entrada de texto con borde -->
                        <Border x:Name="TextBoxBorder"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="10"
                            Padding="5">
                            <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- Triggers para cambiar el borde cuando se selecciona -->
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsFocused" Value="True">
                            <Setter TargetName="TextBoxBorder" Property="BorderBrush" Value="Orange"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#808080"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="PrimarySearchBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource BackgroundBrush}"/>
        <Setter Property="FontFamily" Value="Inter"/>
        <Setter Property="FontSize" Value="13"/>
        <Setter Property="Height" Value="32"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#B0B0B0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="/Resources/Icons/search-icon.png" Width="14" Height="14" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                            </StackPanel>
                            <TextBlock Text="Buscar..."
                                   Foreground="Gray"
                                   Margin="33,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PlaceholderManager}}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#808080"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="#313E60"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <Style x:Key="SecondarySearchBoxStyle" TargetType="TextBox">
        <Setter Property="Background" Value="{StaticResource SecondaryButtonBrush}"/>
        <Setter Property="FontFamily" Value="SF Pro Display"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Height" Value="28"/>
        <Setter Property="Padding" Value="8,0"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#D3D1DB"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="10">
                        <Grid>
                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <Image Source="/Resources/Icons/search-icon.png" Width="14" Height="14" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                <ScrollViewer x:Name="PART_ContentHost" VerticalAlignment="Center"/>
                            </StackPanel>
                            <!-- Prompt Text -->
                            <TextBlock Text="Buscar..."
                                   Foreground="Gray"
                                   Margin="33,0,0,0"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Left"
                                   IsHitTestVisible="False"
                                   Visibility="{Binding Text, RelativeSource={RelativeSource TemplatedParent}, Converter={StaticResource PlaceholderManager}}"/>
                        </Grid>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="#808080"/>
            </Trigger>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource PrimaryButtonBrush}"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>